@model PersonModel

<div class="row">
    <div class="col-md-9">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tin" class="control-label"></label>
                <input asp-for="Tin" class="form-control" />
                <span asp-validation-for="Tin"></span>
            </div>
            <div class="inputs">
                <label asp-for="City.CityName" asp-postfix=":"></label>
                <select asp-for="CityId" asp-items="Model.Cities"></select>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()">
                    <option selected="selected" value="">Select Gender</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Phone.SelectedType" class="control-label"></label>
                <select asp-for="Phone.SelectedType" asp-items="Html.GetEnumSelectList<PhoneType>()">
                    <option selected="selected" value="">Select Type</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Phone.PhoneNumber" class="control-label"></label>
                <input asp-for="Phone.PhoneNumber" class="form-control" />
                <span asp-validation-for="Phone.PhoneNumber"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="control-label"></label>
                <input asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate"></span>
            </div>

            <div class="inputs">
                <label asp-for="RelatedPersn" asp-postfix=":"></label>
                <select asp-for="RelatedPersnId" asp-items="Model.Persons"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <b>@ViewBag.message</b>
        </form>
    </div>
</div>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}  